<div class="push8"></div>
<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="card p-3 bg-light border-secondary mb-3">
				<h3 class="bg-info text-light p-3 border border-dark">Edit profile information</h3>
				<br>
				<div class="row">
          <div class="col-md-2"></div>
					<div class="col-md-8">
            <p class="mb-2"><u>Basic Info</u><span class="text-danger"></span></p>
            <div class="form-group">						
							<input type="text" class="form-control" name="username" id="emailNew" placeholder={{account.email}}>
						</div>
            <div class="form-group">						
							<input type="text" class="form-control" name="username" id="firstNameNew" placeholder={{account.firstName}}>
						</div>
            <div class="form-group">					
							<input type="text" class="form-control" name="username" id="lastNameNew" placeholder={{account.lastName}}>
						</div>
            <p class="mb-2"><u>Location</u></p>
            <div class="form-group">						
							<input type="text" class="form-control" name="username" id="locationNew" placeholder={{account.location}}>
						</div>
  
					</div>
          <div class="col-md-2"></div>
					<div class="col-12">
						<br>

						<div class="text-center">
							<button class="btn btn-success btn-lg" id="updateUser">Update Profile</button>
						</div>
						<div>
							<p class="mt-3 mb-0"><span class="text-danger">*</span><i> Denotes Required Fields</i></p>
						</div>
					</div>
					{{!-- <div class="col-12" align="center"> --}}
						 {{!-- <a href="/change" class="text-dark"><h6>Change password</h6></a> --}}
					{{!-- </div>	 --}}
				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade push20" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="modalTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="mb-0" id="modalBody"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>