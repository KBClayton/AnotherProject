<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="card p-3 bg-light border-secondary mb-3">
				<h3 class="bg-info text-light p-3 border border-dark">Let's Find a Job Lead!</h3>
				<br>
				<div class="row">
            <div class="col-md-12">
              <p class="mb-2"><u>Basic Job Info</u><span class="text-danger"> *</span></p>
                <div class="form-group">What Kind of Position are You Looking For?							
                  <input type="text" class="form-control" name="jobKeywordSearchUS" id="jobKeywordSearchUS" placeholder="e.g. Software Developer...">
                </div>
                <div class="form-group">Where Would You Like to Work?
                  <input type="text" class="form-control" name="jobLocationSearchUS" id="jobLocationSearchUS" placeholder="Job Location...">
                </div>
                <div class="form-group">What is Your Desired Starting Salary?
                  <input type="number" class="form-control" name="jobSalarySearchUS" id="jobSalarySearchUS" placeholder="Posted Salary (if any)...">
                </div>
            </div>
					<br>
						<div class="text-center">
							<button class="btn btn-success btn-lg" id="submit-jobSearchGov">Search</button>
						</div>
						<div>
							<p class="mt-3 mb-0"><span class="text-danger">*</span><i> All Fields Required</i></p>
						</div>
				</div>		
			

			<div id="jobTableDisplayUS">
					<!--bootstrap responsive table with 4 columns-->
					<div class="table-responsive">
							<table class="table table-bordered table-hover" id="jobTableUS">
							<thead id="jobTableUSHeader">
									<tr>
											<th scope="col">Position</th>
											<th scope="col">Hiring Agency</th>
											<th scope="col">Location</th>
											<th scope="col">Starting Salary</th>
											<th scope="col">Job Link</th>
											<th scope="col">Add Job to my List</th>
									</tr>
							</thead>
							<!--table body, will hold data retrieved from API query-->
							<tbody id="jobTableUSBody">                    
							</tbody>
							</table> 
					</div> 
					<!--div to hold button
					<div class="whatsUpBtnHldr">
							<!button to choose a different satellite type>
							<button id="chooseDifferentSatTypeBtn1" type="button" class="btn btn-danger rounded" >Change Satellite Type</button>
					</div -->  
			</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>